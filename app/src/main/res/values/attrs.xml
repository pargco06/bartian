<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VadaProgressBar">
        <attr name="vada_progress" format="float"/>
        <attr name="vada_max" format="integer"/>

        <attr name="vada_unfinished_color" format="color"/>
        <attr name="vada_finished_color" format="color"/>

        <attr name="vada_finished_stroke_width" format="dimension"/>
        <attr name="vada_unfinished_stroke_width" format="dimension"/>

        <attr name="vada_text_size" format="dimension"/>
        <attr name="vada_text_color" format="color"/>

        <attr name="vada_prefix_text" format="string"/>
        <attr name="vada_suffix_text" format="string"/>
        <attr name="vada_text" format="string"/>

        <attr name="vada_background_color" format="color"/>

        <attr name="vada_inner_bottom_text" format="string"/>
        <attr name="vada_inner_bottom_text_size" format="dimension"/>
        <attr name="vada_inner_bottom_text_color" format="color"/>

        <attr name="vada_circle_starting_degree" format="integer" />
        <attr name="vada_show_text" format="boolean"/>
        <attr name="vada_inner_drawable" format="reference"/>
    </declare-styleable>
</resources>